{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique CUID2 identifier"
    },
    "name": {
      "type": "string",
      "description": "Person's full name"
    },
    "age": {
      "type": "integer",
      "minimum": 0,
      "description": "Person's age in years"
    },
    "houseId": {
      "type": "string",
      "description": "CUID2 reference to houses collection"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "Person's email address"
    }
  },
  "required": ["id", "name", "houseId"]
}
